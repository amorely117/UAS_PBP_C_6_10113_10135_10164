<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame"
    tools:context=".EditAddActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardService"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:src="@drawable/teknisi"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/services"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_below="@+id/cardService"
            android:layout_marginStart="175dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp">

                    <RelativeLayout
                        android:id="@+id/layoutJenis_Service"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvJenis_Service"
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="12dp"
                            android:text="@string/jenis_service"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/inputJenis_Service"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="130dp"
                            app:boxBackgroundColor="@color/white"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etJenis_Service"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:hint="@string/jenis_service"
                                android:textSize="12sp" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutLama_Pengerjaan"
                        android:layout_width="320dp"
                        android:layout_height="55dp"
                        android:layout_below="@id/layoutJenis_Service"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/tvLama_Pengerjaan"
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="6dp"
                            android:text="@string/lama_pengerjaan"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/inputLama_Pengerjaan"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="130dp"
                            app:boxBackgroundColor="@color/white"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etLama_Pengerjaan"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:hint="@string/lama_pengerjaan"
                                android:textAlignment="center"
                                android:textSize="12sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/layoutJenis_Kendaraan"
                        android:layout_width="320dp"
                        android:layout_height="55dp"
                        android:layout_below="@id/layoutLama_Pengerjaan"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/tvJenis_Kendaraan"
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="6dp"
                            android:text="@string/jenis_kendaraan"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/inputJenis_Kendaraan"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:layout_marginStart="130dp"
                            app:boxBackgroundColor="@color/white"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusTopStart="10dp">

                            <AutoCompleteTextView
                                android:id="@+id/etJenis_Kendaraan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/jenis_kendaraan"
                                android:inputType="none"
                                android:textSize="12sp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_button"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="260dp"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <Button
                            android:id="@+id/btn_Cancel"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:layout_weight="1"
                            android:text="@string/cancel" />

                        <Button
                            android:id="@+id/btn_Save"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:layout_weight="1"
                            android:text="@string/save" />

                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </ScrollView>
</FrameLayout>